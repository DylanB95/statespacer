citHeader("To cite statespacer in publications, please use:")

year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

citEntry(
  entry           = "Manual",
  title           = "{statespacer}: State Space Modelling in R",
  author          = "Dylan Beijers",
  year            = year,
  url             = "https://dylanb95.github.io/statespacer/",
  note            = note,
  textVersion     = 
    paste0(
      "D. Beijers. (", 
      year, 
      "). statespacer: State Space Modelling in R. ",
      note, "."
    )
)
